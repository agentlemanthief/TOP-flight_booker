<section class="section">
  <div class="container">

    <div class="has-text-centered">
      <h1 class="title is-5 m-5">Booking Confirmation and Payment</h1>
    </div>

    <div class="columns is-centered">
      <div class="column is-two-thirds">
        <div class="box">
        <div class="panel-block">
          <h2 class="title is-6">Flight Details</h2>
        </div>

        <div class="columns mt-3">
          <div class="column has-text-right mr-6">
            <p><strong>From: </strong></p>
            <p><strong>To: </strong></p>
            <p><strong>Departing at: </strong></p>
            <p><strong>Arriving at:</strong></p>
          </div>

          <div class="column has-text-left">
            <p><%= @booking.flight.from_airport.name %></p>
            <p><%= @booking.flight.to_airport.name %></p>
            <p><%= @booking.flight.departure.strftime('%d/%m/%Y @ %H:%M') %></p>
            <p><%= @booking.flight.arrival.strftime('%d/%m/%Y @ %H:%M') %></p>
          </div>
        </div>

        <div class="panel-block">
          <h2 class="title is-6 mt-5">Passenger Details</h2>
        </div>

        <% @booking.passengers.each_with_index do |p, i| %>
          <div class="columns mt-3">
            <div class="column has-text-right mr-6">
                <h3 class="title is-6 mt-5">
                  Passenger <%= i+1 %>:
                </h3>
            </div>

            <div class="column has-text-left">
              <p>
                <strong>Name:</strong> <%= p.name.titleize %>
              </p>
              <p class="mt-4">
                <strong>Email:</strong> <%= p.email %>
              </p>
            </div>
          </div>
        <% end %>

          <div class="field is-grouped is-grouped-centered mt-2">
            <div class="control">
              <button class="button is-light">To Checkout</button>
            </div>
          </div>

      </div>
    </div>
  </div>
</section>
