<h1>Booking</h1>

<%= form_for @booking do |f| %>
  <p>Flight date: <%= @flight.departure %></p>
  <p>From: <%= @flight.from_airport.name %></p>
  <p>To: <%= @flight.to_airport.name %></p>
  <p>For <%= pluralize(@passengers, 'passenger') %></p>
  <% @passengers.to_i.times do %>
    <p>1</p>
  <% end %>
  <%= f.submit 'Create Booking' %>
<% end %>
