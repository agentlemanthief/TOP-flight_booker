<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="section">
        <h1 class="title is-5">Booking Summary and Passenger Details Entry</h1>
      </div>
    </div>
    <div class="columns is-centered">
      <div class="column is-four-fifths">
        <div class="box">
        <%= form_with model: @booking do |f| %>
          <p>Flight date: <%= @flight.departure.strftime('%d/%m/%Y') %>
          <p>Flight time: <%= @flight.departure.strftime('%H:%M') %></p>
          <p>Flight arrival date: <%= @flight.arrival.strftime('%d/%m/%Y') %></p>
          <p>Flight arrival time: <%= @flight.arrival.strftime('%H:%M') %></p>
          <p>From: <%= @flight.from_airport.name %></p>
          <p>To: <%= @flight.to_airport.name %></p>
          <p>For <%= pluralize(@passenger_num, 'passenger') %></p>
          <%= f.fields_for :passengers do |passenger_form| %>
            <%= passenger_form.label :name, 'Name: ', class: 'label' %>
            <%= passenger_form.text_field :name, class: 'input' %>
            <%= passenger_form.label :email, 'Email: ', class: 'label' %>
            <%= passenger_form.email_field :email, class: 'input' %>
            <br>
          <% end %>
          <%= f.hidden_field :passenger_num, value: params[:passenger_num] %>
          <%= f.hidden_field :flight_id, value: params[:flight_id] %>
          <%= f.submit 'Create Booking', class: 'button' %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

