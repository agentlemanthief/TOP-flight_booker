<h1>Booking and Passenger Entry</h1>

<%= form_with model: @booking do |f| %>
  <p>Flight date: <%= @flight.departure.strftime('%d/%m/%Y') %>
  <p>Flight time: <%= @flight.departure.strftime('%H:%M') %></p>
  <p>Flight arrival date: <%= @flight.arrival.strftime('%d/%m/%Y') %></p>
  <p>Flight arrival time: <%= @flight.arrival.strftime('%H:%M') %></p>
  <p>From: <%= @flight.from_airport.name %></p>
  <p>To: <%= @flight.to_airport.name %></p>
  <p>For <%= pluralize(@passenger_num, 'passenger') %></p>
  <%= f.fields_for :passengers do |passenger_form| %>
    <%= passenger_form.label :name, 'Name: ' %>
    <%= passenger_form.text_field :name %>
    <%= passenger_form.label :email, 'Email: ' %>
    <%= passenger_form.email_field :email %>
    <br>
  <% end %>
  <%= f.hidden_field :passenger_num, value: params[:passenger_num] %>
  <%= f.hidden_field :flight_id, value: params[:flight_id] %>
  <%= f.submit 'Create Booking' %>
<% end %>
